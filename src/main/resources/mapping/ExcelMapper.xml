<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hx.dao.ExcelMapper">
	<resultMap id="BaseResultMap" type="com.hx.modle.Mail">
		<result column="linkname" jdbcType="VARCHAR" property="linkname" />
		<result column="linknumber" jdbcType="VARCHAR" property="linknumber" />
		<result column="typeid" jdbcType="INTEGER" property="typeid" />
	</resultMap>
	<insert id="InputExcel">
		insert into mail
		 (linkname,linknumber,typeid)
		 values
		(#{params.linkname},#{params.linknumber},#{params.typeid})
	</insert>
	<sql id="WithDept_Column_List">
		e.id, e.linkname, e.linknumber, e.typeid
	</sql>
	<sql id="Example_Where_Clause">
		<where>
			<foreach collection="oredCriteria" item="criteria" separator="or">
				<if test="criteria.valid">
					<trim prefix="(" suffix=")" prefixOverrides="and">
						<foreach collection="criteria.criteria" item="criterion">
							<choose>
								<when test="criterion.noValue">
									and #{criterion.condition}
								</when>
								<when test="criterion.singleValue">
									and #{criterion.condition} #{criterion.value}
								</when>
								<when test="criterion.betweenValue">
									and #{criterion.condition} #{criterion.value} and
									#{criterion.secondValue}
								</when>
								<when test="criterion.listValue">
									and #{criterion.condition}
									<foreach collection="criterion.value" item="listItem"
										open="(" close=")" separator=",">
										#{listItem}
									</foreach>
								</when>
							</choose>
						</foreach>
					</trim>
				</if>
			</foreach>
		</where>
	</sql>

	<select id="getAll" resultMap="BaseResultMap">
		select
		<if test="distinct">
			distinct
		</if>
		<include refid="WithDept_Column_List" />
		FROM mail e
	</select>

	<delete id="deleteMany" parameterType="int">
	delete from mail where id in
	<foreach item="id" collection="array" open="(" separator="," close=")">
		#{id}
	</foreach>
	</delete>

	<select id="getById" resultType="com.hx.modle.Mail">
      select *
      from mail
      where typeid=#{id}
  </select>

</mapper>